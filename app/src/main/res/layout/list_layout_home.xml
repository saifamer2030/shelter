<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout">

        <ImageView
            android:id="@+id/user_name_logo_list"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="4dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="#0b0b0b" />

            <TextView
                android:id="@+id/date_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView2"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#6c192d30" />
        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:id="@+id/more_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_more"
        android:contentDescription="more option" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <ImageView
            android:id="@+id/tramp_photo"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_marginRight="8dp"
             />

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tramp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/name_n"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tramp_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tramp_name"
                android:text="@string/address_tramp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tramp_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tramp_address"
                android:text="@string/city_tramp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tramp_city"
                android:id="@+id/r"
                >
            <CheckBox
                android:id="@+id/tasken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/homed" />
                <ImageView
                    android:id="@+id/go_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tasken"
                    android:src="@drawable/goon"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/r"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/tweeter_logo"
                    android:layout_width="20dp"
                    android:layout_weight="1"
                    android:layout_height="20dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/tt"/>
                <ImageView
                    android:id="@+id/fac_logo"
                    android:layout_width="20dp"
                    android:layout_weight="1"
                    android:layout_height="20dp"
                    android:src="@drawable/ff"
                    android:layout_margin="8dp"
                    />
                <ImageView
                    android:id="@+id/donate_logo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:src="@drawable/dd"
                    android:visibility="gone"

                    />

                <ImageView
                    android:id="@+id/share_logo"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/share50" />

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>